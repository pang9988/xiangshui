/* 首页样式 */

.uthlist{
  width:100%;
 background:linear-gradient(225deg,rgb(231, 191, 9),rgb(16, 192, 223),rgb(16, 223, 34));
   display:flex;
   /* justify-content:space-around; */

   flex-wrap:wrap;
}
.mwpw{
  width:40%;
  margin-top:20rpx;
